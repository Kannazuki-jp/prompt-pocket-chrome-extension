{
  "manifest_version": 3,
  "name": "Prompt Panel for ChatGPT & Gemini",
  "version": "1.0.0",
  "description": "サイドパネルでプロンプトテンプレートを保存・管理し、ChatGPTやGeminiにワンクリックで入力できるChrome拡張機能です。",
  "permissions": ["storage", "sidePanel", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["src/content-scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Prompt Panel"
  }
}